<br />
<%= link_to "New Task", new_task_path, class: "icon icon-add" %>
<br />
<br />
<style>
  table, th, td {
    border: 1px solid black;
  }
</style>

<table>
  <thead>
  <tr>
    <th>Name</th>
    <th>Download Link</th>
    <th>Action</th>
  </tr>
  </thead>

  <tbody>
  <% @tasks.each do |task| %>

    <tr>
      <td><%= task.name %></td>
      <td><%= link_to "Download task", task.attachment_url %></td>
      <td style="width:150px" align="center">
        <%= button_to "Delete",  task, method: :delete %>
        <%= button_to "Detail", :action => 'detail', :id => task.id %>
      </td>
    </tr>

  <% end %>
  </tbody>

</table>